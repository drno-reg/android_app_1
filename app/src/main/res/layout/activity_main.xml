<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.drno.android_app_1.MainActivity">


    <Button
            android:text="@string/btn_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_start" android:onClick="sayHello"
            style="@style/Widget.AppCompat.Button"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>
    <Button
            android:text="@string/btn_stop"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:id="@+id/button_stop"
            app:layout_constraintLeft_toRightOf="@+id/button_start"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>

    <Button
            android:text="@string/btn_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button_exit"
            android:layout_marginLeft="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"/>
    <TextView
            android:text="@string/text_ACCELEROMETER"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_Accelerometer" android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="0dp" app:layout_constraintTop_toBottomOf="@+id/button_stop"/>
    <TextView
            android:text="@string/text_GYROSCOPE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView_Gyroscope"
            android:layout_marginTop="0dp" app:layout_constraintTop_toBottomOf="@+id/textView_Accelerometer"
            android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent"/>
    <Button
            android:text="@string/btn_http"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_http" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_Gyroscope" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:onClick="sayHello"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_HTTP" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button_http" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"/>
    <Button
            android:text="@string/btn_async_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_async_task" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_Gyroscope"
            app:layout_constraintLeft_toRightOf="@+id/button_http" android:layout_marginLeft="8dp"
            android:onClick="onclick_async_task"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_async_task" app:layout_constraintLeft_toLeftOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView_HTTP"/>
</android.support.constraint.ConstraintLayout>
